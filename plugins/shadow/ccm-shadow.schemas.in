<?xml version="1.0"?>
<gconfschemafile>
   <schemalist>
      <schema>
         <key>/schemas/apps/cairo-compmgr/default/shadow/border</key>
         <applyto>/apps/cairo-compmgr/default/shadow/border</applyto>
         <owner>gnome</owner>
         <type>int</type>
		 <default>14</default>
         <locale name="C">
            <short>Size of shadow</short>
            <long>Size of shadow in pixel</long>
         </locale>
      </schema>
	  <schema>
         <key>/schemas/apps/cairo-compmgr/default/shadow/offset</key>
         <applyto>/apps/cairo-compmgr/default/shadow/offset</applyto>
         <owner>gnome</owner>
         <type>int</type>
		 <default>4</default>
         <locale name="C">
            <short>Size of offset</short>
            <long>Size of offset in pixel between left or top border of window</long>
         </locale>
      </schema>
   </schemalist>
</gconfschemafile>
